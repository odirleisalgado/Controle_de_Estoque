@model IEnumerable<ControleEstoque.Models.Entidades.Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="jumbotron">
    <h2>Categorias</h2>
</div>

<div>
    <button class="btn-success"><a asp-action="Create">Adicionar Categoria +</a></button>
</div>
   
<br />
<table class="table table-striped table-hover ">
    <thead>
        <tr class="bg-primary" style="">
            <th>
                <p>Id Categoria</p>
            </th>
            <th>
                <p>Nome Categoria</p>
            </th>
            <th><p>Ações</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCategoria)
            </td>
            <td>
                <button>@Html.ActionLink("Editar", "Edit", new { id = item.Id  /* id=item.PrimaryKey */ })</button> |
                 
                <button> @Html.ActionLink("Detalhes", "Details", new { id = item.Id /* id=item.PrimaryKey */ })</button> |
                <button> @Html.ActionLink("Excluir", "Delete", new { id = item.Id /* id=item.PrimaryKey */ })</button>
               
            </td>
        </tr>
}
    </tbody>
</table>
