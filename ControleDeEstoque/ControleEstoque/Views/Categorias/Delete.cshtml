@model ControleEstoque.Models.Entidades.Categoria

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar Categoria</h2>
<hr />
<h4>Deseja excluir o item abaixo?</h4>


<table class="table table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                Nome Categoria
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>

                @Html.DisplayFor(model => model.NomeCategoria)
            </td>
        </tr>
    </tbody>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <button class="btn btn-default">
        <a asp-action="Index" style="text-decoration:none;">Voltar</a>
    </button>
</form>
