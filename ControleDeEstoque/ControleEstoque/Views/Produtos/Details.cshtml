@model ControleEstoque.Models.Entidades.Produto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes do Produto</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr class="bg-primary">
            <th>
                Nome Produto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                Quantidade
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>

                @Html.DisplayFor(model => model.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(model => model.Categoria.NomeCategoria)
            </td>
            <td>
                @Html.DisplayFor(model => model.Quantidade)
            </td>
        </tr>
    </tbody>
</table>
<div>
    <button class="btn btn-default">
        <a asp-action="Edit" asp-route-id="@Model.Id" style="text-decoration:none;">Editar</a>
    </button>
    <button class="btn btn-default">
        <a asp-action="Index" style="text-decoration:none ">Voltar</a>
    </button>

</div>
